<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#90CAF9"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <EditText
        android:id="@+id/name_entry"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50dp"
        android:hint="Imię" android:textSize="40px"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="13dp"
        />
    <EditText
        android:id="@+id/email_entry"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/name_entry"
        android:hint="Email" android:textSize="40px"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="13dp"
        />
    <EditText
        android:id="@+id/password_entry"
        android:background="@drawable/edit_background"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/email_entry"
        android:hint="Hasło" android:textSize="40px"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:paddingLeft="13dp"
        />
    <Button
        android:id="@+id/signin_action"
        android:layout_marginBottom="15dp"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@id/password_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF"
        android:text="SIGN IN"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:tint="@android:color/black" />

    <Button
        android:id="@+id/login_action"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_below="@id/signin_action"
        android:layout_centerHorizontal="true"

        android:background="#FFFFFF"
        android:text="LOG IN"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:tint="@android:color/black" />

</RelativeLayout>